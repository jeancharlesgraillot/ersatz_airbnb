{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}

<div class="container-fluid">

    <h1 class="my-5">Administration des utilisateurs</h1>   

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Avatar</th>
                <th>Email</th>
                <th>Introduction</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in pagination.data %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.firstName}}</td>
                <td>{{user.lastName}}</td>
                <td>
                    <img class="avatar avatar-mini" src="{{user.picture}}" alt="Avatar de {{user.fullName}}">
                </td>
                <td>{{user.email}}</td>
                <td>{{user.introduction}}</td>
                <td>{{user.description}}</td>
                <td>
                    <a href="{{path('admin_user_edit', {'id': user.id})}}" class="btn btn-primary">
                        <i class="fas fa-pen"></i>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {{pagination.display()}}
</div>

{% endblock %}
